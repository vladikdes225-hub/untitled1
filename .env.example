NODE_ENV=production
PORT=3001
TRUST_PROXY=false

# Optional external PostgreSQL (recommended on Render)
# Example: postgres://user:pass@host:5432/dbname
DATABASE_URL=
# auto|true|false
DATABASE_SSL=auto
DATABASE_POOL_MAX=10

DATA_DIR=./data
UPLOADS_DIR=./uploads

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=https://example.com,https://www.example.com

# Strong random token for admin API operations (used by server and bot)
ADMIN_API_TOKEN=replace_with_strong_random_token
REQUIRE_ADMIN_TOKEN=true

# Optional extra connect-src values for CSP (comma-separated)
# CSP_CONNECT_SRC=https://api.example.com

TELEGRAM_BOT_TOKEN=replace_with_telegram_bot_token
BOT_AUTH_PASSWORD=replace_with_strong_bot_password

ADS_API_BASE=http://localhost:3001
SUPPORT_API_BASE=http://localhost:3001

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_GLOBAL_MAX=240
RATE_LIMIT_SUPPORT_MAX=60
REQUEST_BODY_LIMIT_BYTES=2000000
